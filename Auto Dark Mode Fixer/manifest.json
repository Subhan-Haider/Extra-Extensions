{
  "manifest_version": 3,
  "name": "Auto Dark Mode Fixer",
  "version": "1.0.0",
  "description": "Fix broken dark modes. Automatically detects low-contrast themes and applies OLED-optimized CSS.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon.svg",
    "32": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  },
  "action": {}
}