{
  "manifest_version": 3,
  "name": "Link Expiry Checker",
  "version": "1.0.0",
  "description": "Never click a dead link again. Detect stale content and warn about likely expired or outdated links.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.svg",
      "32": "icon.svg",
      "48": "icon.svg",
      "128": "icon.svg"
    }
  },
  "icons": {
    "16": "icon.svg",
    "32": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  }
}