{
  "manifest_version": 3,
  "name": "Dev Interview Assistant",
  "version": "1.0.0",
  "description": "Discrete hints and pattern suggestions for live coding interviews and problem solving.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://leetcode.com/*",
        "*://www.hackerrank.com/*",
        "*://codereality.io/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "hints.css"
      ]
    }
  ],
  "icons": {
    "16": "icon.svg",
    "32": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  }
}