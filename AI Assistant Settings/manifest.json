{
  "manifest_version": 3,
  "name": "AI Assistant Settings",
  "version": "1.0.0",
  "description": "Global settings for all AI extensions. Set your OpenRouter API key once here.",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.svg",
      "32": "icon.svg",
      "48": "icon.svg",
      "128": "icon.svg"
    }
  },
  "icons": {
    "16": "icon.svg",
    "32": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  }
}