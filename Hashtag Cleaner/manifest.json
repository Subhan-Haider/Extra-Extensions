{
  "manifest_version": 3,
  "name": "Hashtag Cleaner",
  "version": "1.0.0",
  "description": "Purge spammy and redundant hashtags from your social media posts with one click.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://x.com/*",
        "*://www.linkedin.com/*",
        "*://www.instagram.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.svg",
      "32": "icon.svg",
      "48": "icon.svg",
      "128": "icon.svg"
    }
  },
  "icons": {
    "16": "icon.svg",
    "32": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  }
}