{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "Chronos: Visual Context Manager",
    "version": "1.0.0",
    "description": "Organize your workflow into visual projects. Stop losing tabs, start keeping context.",
    "permissions": [
        "tabs",
        "storage",
        "contextMenus",
        "activeTab",
        "unlimitedStorage",
        "tabGroups",
        "scripting"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Open Chronos Ultima"
    },
    "background": {
        "service_worker": "background/background.js"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+E",
                "mac": "Command+Shift+E"
            },
            "description": "Open Chronos Dashboard"
        },
        "quick-save-page": {
            "suggested_key": {
                "default": "Ctrl+Shift+S",
                "mac": "Command+Shift+S"
            },
            "description": "Quick Save Page to Chronos"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    }
}