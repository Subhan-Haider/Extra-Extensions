{
  "manifest_version": 3,
  "name": "Simple Ad Blocker",
  "version": "1.0",
  "description": "Blocks common ads on websites.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "update_url": "https://edge.microsoft.com/extensionwebstorebase/v1/crx"
}