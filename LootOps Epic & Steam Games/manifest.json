{
	"update_url": "https://clients2.google.com/service/update2/crx",
	"manifest_version": 3,
	"name": "LootOps: Epic & Steam Games",
	"description": "Tactical HUD for free games. LootOps tracks every free loot drop from Epic Games and Steam.",
	"version": "1.0.9",
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"permissions": [
		"alarms",
		"notifications",
		"storage"
	],
	"host_permissions": [
		"https://store-site-backend-static-ipv4.ak.epicgames.com/",
		"https://store.steampowered.com/*"
	],
	"action": {
		"default_popup": "popup/popup.html",
		"default_icon": "icons/icon128.png"
	},
	"background": {
		"service_worker": "service_worker.js"
	},
	"content_scripts": [
		{
			"matches": [
				"https://store.steampowered.com/*"
			],
			"js": [
				"scripts/steam_content.js"
			]
		}
	]
}