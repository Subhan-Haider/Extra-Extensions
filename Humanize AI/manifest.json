{
"update_url": "https://clients2.google.com/service/update2/crx",

    "manifest_version": 3,
    "name": "Humanize AI",
    "version": "1.5.0",
    "description": "The simplest way to make AI text sound human.",
    "permissions": [
        "storage",
        "sidePanel",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "https://deceptioner.site/*"
    ],
    "action": {
        "default_icon": "icon.png",
        "default_title": "Open Authentify"
    },
    "background": {
        "service_worker": "background.js"
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}