{
  "manifest_version": 3,
  "name": "Clipboard History (Local)",
  "version": "1.0.0",
  "description": "Secure, local-only clipboard history manager. Never lose a snippet again.",
  "permissions": [
    "storage",
    "activeTab",
    "clipboardRead"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.svg",
      "32": "icon.svg",
      "48": "icon.svg",
      "128": "icon.svg"
    }
  },
  "icons": {
    "16": "icon.svg",
    "32": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  }
}