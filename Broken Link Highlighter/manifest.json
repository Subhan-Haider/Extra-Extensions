{
  "manifest_version": 3,
  "name": "Broken Link Highlighter",
  "version": "1.0.0",
  "description": "Automatically find and highlight dead links on any page. Save time browsing.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.svg",
      "32": "icon.svg",
      "48": "icon.svg",
      "128": "icon.svg"
    }
  },
  "host_permissions": [
    "*://*/*"
  ],
  "icons": {
    "16": "icon.svg",
    "32": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  }
}