{
  "manifest_version": 3,
  "name": "Image Converter Pro",
  "version": "1.0.0",
  "description": "Convert, compress, and batch process images with advanced features",
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "downloads",
    "notifications"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.svg",
      "32": "icon.svg",
      "48": "icon.svg",
      "128": "icon.svg"
    },
    "default_title": "Image Converter Pro"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.svg",
    "32": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "index.html",
        "styles.css",
        "app.js",
        "jszip.min.js",
        "icons/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "options_page": "options.html",
  "update_url": "https://edge.microsoft.com/extensionwebstorebase/v1/crx"
}