{
  "manifest_version": 3,
  "name": "Endpoint Recorder",
  "version": "1.0.0",
  "description": "The easiest way to document APIs. Automatically capture and format endpoints as you interact with them.",
  "permissions": [
    "webRequest",
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.svg",
      "32": "icon.svg",
      "48": "icon.svg",
      "128": "icon.svg"
    }
  },
  "icons": {
    "16": "icon.svg",
    "32": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  }
}