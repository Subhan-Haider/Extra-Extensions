{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "CodeLens: Extension Source Explorer",
  "short_name": "CodeLens",
  "description": "Unlock the secrets of any browser extension. View source code for Chrome, Firefox, and Opera extensions with a single click.",
  "version": "2.1.0",
  "manifest_version": 3,
  "minimum_chrome_version": "88",
  "background": {
    "service_worker": "service_worker.js"
  },
  "action": {
    "default_icon": {
      "16": "icon.svg",
      "32": "icon.svg",
      "48": "icon.svg",
      "128": "icon.svg"
    },
    "default_title": "CodeLens - Inspect this extension",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.svg",
    "32": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html#optionsV2"
  },
  "permissions": [
    "tabs",
    "storage",
    "contextMenus",
    "downloads",
    "declarativeContent"
  ],
  "host_permissions": [
    "*://clients2.google.com/service/update2/crx*",
    "*://clients2.googleusercontent.com/crx/download/*",
    "*://microsoftedge.microsoft.com/extensionwebstorebase/v1/crx*",
    "*://edge.microsoft.com/extensionwebstorebase/v1/crx*",
    "https://addons.mozilla.org/*",
    "https://api.github.com/*",
    "https://github.com/*"
  ],
  "optional_host_permissions": [
    "*://*/*"
  ],
  "incognito": "split"
}